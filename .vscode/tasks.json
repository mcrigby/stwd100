{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "deploybuild",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build", "${workspaceFolder}/samples/samples.csproj",
                "-a", "arm",
                "-o", "${workspaceFolder}/bld/${workspaceFolderBasename}"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "deploy",
            "dependsOn": [ "deploybuild" ],
            "command": "/usr/bin/scp",
            "type": "process",
            "args": [
                "-r", "${workspaceFolder}/bld/${workspaceFolderBasename}", "pi@protopiusb:/home/pi/bld"
            ]
        },
        {
            "label": "deployfromwin",
            "dependsOn": [ "deploybuild" ],
            "command": "C:/Program Files/Git/usr/bin/scp.exe",
            "type": "process",
            "args": [
                "-r", "${workspaceFolder}/bld/${workspaceFolderBasename}", "pi@protopi:/home/pi/bld"
            ]
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/samples/samples.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/samples/samples.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/samples/samples.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}